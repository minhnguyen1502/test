<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F6C941"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:layout_margin="8dp"
    android:layout_gravity="center"
    android:clipToPadding="false"
    android:layoutDirection="ltr"
    android:backgroundTint="#F6C941"
    android:backgroundTintMode="src_in"
    android:shape="rectangle">

    <TextView
        android:id="@+id/custom_notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crack Screen Effect"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center" />

    <TextView
        android:id="@+id/custom_notification_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The crack screen effect is running"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="4dp" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:background="@android:color/transparent"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:padding="12dp"
        android:layout_gravity="center"
        android:backgroundTint="#D9D9D9"
        android:backgroundTintMode="src_in"
        android:shape="rectangle"
        android:strokeColor="#D9D9D9"/>
</LinearLayout>
